@model Fitness.Models.Hizmet
@{
    ViewData["Title"] = "Yeni Hizmet Ekle";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>
    <hr />

    <div class="row">
        <div class="col-md-8">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Ad" class="form-label"></label>
                    <input asp-for="Ad" class="form-control" placeholder="Ornek: Fitness & Kilo Verme" />
                    <span asp-validation-for="Ad" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="SalonId" class="form-label"></label>
                    <select asp-for="SalonId" asp-items="ViewBag.Salonlar" class="form-select">
                        <option value="">Salon Seciniz</option>
                    </select>
                    <span asp-validation-for="SalonId" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="SureDakika" class="form-label"></label>
                        <input asp-for="SureDakika" class="form-control" type="number" />
                        <span asp-validation-for="SureDakika" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Ucret" class="form-label"></label>
                        <input asp-for="Ucret" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="Ucret" class="text-danger"></span>
                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-success">Kaydet</button>
                    <a asp-action="Index" class="btn btn-secondary">Iptal</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
